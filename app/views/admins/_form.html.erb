<%= form_for @admin do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <legend> Enter details:</legend>
    <tr>
        <td>
            <%= f.label :username %>
        </td>
        <td>
            <%= f.text_field :username %>
        </td>
    </tr>
    <tr>
        <td>
            <%= f.label :password %>
        </td>
        <td>
            <%= f.password_field :password %>
        </td>
    </tr>
    
  </table>
  
<div >
    <%= f.submit %>
</div>
<% end %>